@model Cart
@{
    ViewBag.Title = "SepetSayfasi";
}

@Html.ActionLink("Alışverişe devam", "ProductList", null, new { @class = "btn btn-primary" })

@if (ViewBag.SepetBos != null)
{
    <h1 style="color:red">@ViewBag.SepetBos</h1>
}
else
{
    <div class="jumbotron">
        Ödemeneiz gereken tutar => @Model.TotalPrice ....Siparişi onaylamak için lütfen @Html.ActionLink("Tıklayınız","SiparisiOnayla")
    </div>

    <div class="panel panel-primary">
        <div class=" panel panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ürün İsmi</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Adedi</th>
                        <th>Ara fiyatı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CartItem item in Model.Sepetim)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.Amount</td>
                            <td>@item.SubTotal</td>
                            <td>@Html.ActionLink("Sepetten çıkar","SepettenCikar",new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}                    